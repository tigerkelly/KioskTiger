<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="aPane" onTouchReleased="#doTouch" style="-fx-background-color: black;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.SleepModeController">
   <children>
      <Button fx:id="btnCute" contentDisplay="TOP" layoutX="2.0" layoutY="2.0" mnemonicParsing="false" onAction="#doBtnCute" style="-fx-background-color: black;" text="&#10;" textAlignment="CENTER" textFill="WHITE">
         <graphic>
            <ImageView fx:id="ivCute" fitWidth="100.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../images/CuteTiger.png" />
               </image>
            </ImageView>
         </graphic>
         <font>
            <Font name="SansSerif Bold" size="24.0" />
         </font>
      </Button>
      <Label fx:id="lblMessage" textFill="WHITE" />
   </children>
</AnchorPane>
